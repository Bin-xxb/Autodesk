<?xml version="1.0" encoding="UTF-8"?>
<quilt layout="one-column.message" nestable="false" disableTopCssClass="false">
  <add to="footer-right">
    <component id="autodesk-custom-contest-post-a-comment-button"/>
    <component id="external.widget.share-button" wrapper="lia-message-actions" textOnly="false" controlType="inversed"/>
  </add>
  <add to="header-left">
    <component id="message-view.widget.author-avatar" wrapper="lia-message-author-with-avatar"/>
    <component id="message-view.widget.author-username" wrapper="lia-message-author-with-avatar"/>
  </add>
  <add to="main">
    <component id="message-view.widget.subject" wrapper="lia-contest-content" disableSubjectLink="true" hideSubjectIcons="true"/>
    <component id="message-view.widget.contest-media-description" wrapper="lia-contest-content"/>
    <component id="message-view.widget.contest-media"/>
  </add>
  <add to="header-right">
    <component id="post-date"/>
    <component id="community.widget.page-options"/>
  </add>
  <add to="footer-left">
    <component id="message-view.widget.kudos" wrapper="lia-contest-voting-actions" displayStyle="reversed"/>
    <component id="ratings.widget.rating-display" wrapper="lia-contest-voting-actions" ratingSystemRef="conv:contest_ratings"/>
    <component id="modbar-toggle"/>
    <component id="modbar"/>
  </add>
</quilt>