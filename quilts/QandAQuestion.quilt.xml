<?xml version="1.0" encoding="UTF-8"?>
<quilt layout="two-column.message" nestable="false" disableTopCssClass="false">
  <add to="main-right">
    <component id="message-view.widget.tags" useChrome="true" showTagLabelText="true"/>
    <component id="reply-button"/>
    <component id="message-view.widget.kudos" displayStyle="reversed"/>
    <component id="me-too-with-count" ratingSystemRef="conv:question_metoo"/>
  </add>
  <add to="header-left">
    <component id="message-view.widget.subject" wrapper="lia-qa-content" disableSubjectLink="true" hideSubjectIcons="true"/>
    <component id="author-avatar"/>
    <component id="author"/>
    <component id="post-date" wrapper="lia-qa-question-content-right"/>
    <component id="message-view.widget.action-menu" wrapper="lia-qa-question-content-right" renderOrder="message-action-menu"/>
  </add>
  <add to="main-left">
    <component id="message-view.widget.body" wrapper="lia-qa-content lia-qa-question-content"/>
  </add>
</quilt>